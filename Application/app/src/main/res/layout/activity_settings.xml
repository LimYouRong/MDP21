<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F6FB">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/button1"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/button_state"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Send Custom Message 1"
            android:textAppearance="@style/roboto"
            android:textColor="#4E7D96"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_gravity="center_horizontal"
            android:text="Set your custom message below" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/button_state"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Send Custom Message 2"
            android:textAppearance="@style/roboto"
            android:textColor="#4E7D96"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_gravity="center_horizontal"
            android:text="Set your custom message below" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <!--<TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="200dp" />-->

        <Button
            android:id="@+id/buttonEdit"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/button_state"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Edit"
            android:textAppearance="@style/roboto"
            android:textColor="#4E7D96"
            android:textStyle="bold"  />

        <Button
            android:id="@+id/buttonSave"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/button_state"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save"
            android:textAppearance="@style/roboto"
            android:textColor="#4E7D96"
            android:textStyle="bold"  />
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>